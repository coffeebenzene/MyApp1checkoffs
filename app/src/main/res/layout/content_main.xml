<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="istd.eric.myapp1checkoffs.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to checkoff 2(UI) &amp; HW2(animation)"
            android:tag="Checkoff2Activity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to checkoff 3 (Frames)"
            android:tag="Checkoff3Activity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to checkoff HW1(Actionbar) &amp; HW3(scrollbar)"
            android:tag="CheckoffHW1Activity"
            android:onClick="movetocheckoff"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:text="Week 6 below:"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to files checkoff"
            android:tag="CheckoffFilesActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to map checkoff"
            android:tag="CheckoffMapActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to camera checkoff"
            android:tag="CheckoffCameraActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to firebase checkoff"
            android:tag="CheckoffFirebaseActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to SQLite checkoff"
            android:tag="CheckoffSQLActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to client checkoff"
            android:tag="CheckoffClientActivity"
            android:onClick="movetocheckoff"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to server checkoff"
            android:tag="CheckoffServerActivity"
            android:onClick="movetocheckoff"
            />
    </LinearLayout>
</ScrollView>